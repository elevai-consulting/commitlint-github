{
  "name": "commitlint-github",
  "description": "✔️❌ Shareable commitlint config enforcing prefixing each commit with associated GitHub Issue(s)",
  "version": "0.1.0",
  "license": "MIT",
  "author": {
    "name": "Elevai Consulting",
    "email": "account@elevai.com",
    "url": "https://www.elevai.com"
  },
  "keywords": [
    "commitlint",
    "github-commitlint",
    "github-style",
    "github",
    "multipack"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/elevai-consulting/commitlint-github"
  },
  "bugs": {
    "url": "https://github.com/elevai-consulting/commitlint-github/issues"
  },
  "scripts": {
    "clean": "lerna clean --yes; rm -rf node_modules",
    "build:packages": "lerna run build",
    "clean:packages": "lerna clean --yes",
    "watch:packages": "lerna run watch",
    "link:packages": "lerna bootstrap",
    "publish:packages": "npm run link:packages && npm run build:packages && lerna publish --message=\"chore: publish changed packages\"",
    "test:packages": "jest --coverage",
    "watch:test:packages": "jest --watch",
    "lint:packages": "eslint ./packages --ext .ts --max-warnings=0",
    "fix:packages": "eslint ./packages --ext .ts --fix --max-warnings=0"
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run lint:packages",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  }
}
